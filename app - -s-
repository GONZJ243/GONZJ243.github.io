    return html.Div([
        html.Div(style={
            'height':'6px',
            'backgroundColor':color,
            'borderTopLeftRadius':'10px',
            'borderTopRightRadius':'10px'
        }),
        html.Div([
            html.H4(title, style={
                'fontSize':'18px',
                'fontWeight':'600',
                'margin':'10px 0 5px'
            }),
            html.P(f"{count} projects", style={
                'fontSize':'16px',
                'margin':'0',
                'color':'#666'
            })
        ], style={'padding':'10px 15px'})
    ], style={
        'width':'18%',
        'backgroundColor':'#fff',
        'borderRadius':'10px',
        'boxShadow':'0 4px 10px rgba(0,0,0,0.1)',
        'margin':'10px',
        'display':'inline-block',
        'verticalAlign':'top'
    })
    

