            projects_df[projects_df.ID.isin(selected_projects)].ID
        )] 
    elif filter_mode == "on":
        selected_projects = projects_df[projects_df.RISK == "On Track"].PROJECT_ID
        filtered_projects = projects_df[projects_df.ID.isin(
